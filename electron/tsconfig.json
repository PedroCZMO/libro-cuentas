{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": false,
    "allowJs": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
